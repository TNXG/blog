      <% if((is_post() && theme.post.toc.enable) || (is_page() && page.toc==true)){ %>
        <a class="toc-btn" id="toc-btn"><i id="i-menu"></i></a>
        <% } %>
          <a href="#top" class="click-btn">
            <i id="i-up"></i>
          </a>
    </div>

